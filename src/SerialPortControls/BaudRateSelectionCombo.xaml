<UserControl x:Name="BaudRateSelectionComboControl"
             x:Class="SerialPortControls.BaudRateSelectionCombo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    <Grid>
        <ComboBox x:Name="ComboBox" ItemsSource="{Binding Path=BaudRateCollection}" SelectedValue="{Binding Path=SelectedBaudRate, Mode=TwoWay}" DataContext="{Binding ElementName=BaudRateSelectionComboControl}"/>

    </Grid>
</UserControl>
